<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>
<h2>Reviews</h2>

<% @restaurant.reviews.each do |review| %>
  <div>
    <p><strong>Rating:</strong> <%= review.rating %></p>
    <p><strong>Comment:</strong> <%= review.comment %></p>
    <%= link_to 'Delete Review', restaurant_review_path(@restaurant, review), method: :delete, data: { confirm: 'Are you sure you want to delete this review?' } %>
    <hr>
  </div>
<% end %>

<!-- Add Review Form -->
<h2>Add Review</h2>

<%= form_with(model: [@restaurant, @restaurant.reviews.build]) do |form| %>
  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5 %>
  </div>

  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit 'Add Review' %>
  </div>
<% end %>
